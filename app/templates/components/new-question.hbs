{{#if addNewQuestion}}
  <div class="ask-question-form">
    <form>
      <div class="form-group question-form">
        <label for="category">Category</label>
        {{input value=category id="category"}}
      </div>

      <div class="form-group question-form">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group question-form">
        <label for="body">Body</label>
        {{textarea rows="8" cols="40" value=body id="body"}}
      </div>

      <div class="form-group question-form">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <button class="btn btn-default inline save-button" {{action 'saveQuestion'}}>Save</button>
      <button class="btn btn-warning cancel-button inline" {{action 'hideQuestionForm'}}>Cancel</button>
    </form>
  </div>
{{else}}
  <button  class="btn btn-default new-button" {{action 'questionFormShow'}}>Ask a Question</button>
{{/if}}
